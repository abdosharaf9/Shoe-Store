<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="label">
        <item name="android:layout_marginTop">@dimen/_16dp</item>
        <item name="android:layout_marginBottom">@dimen/_8dp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/label_size</item>
    </style>

    <style name="label2">
        <item name="android:layout_marginTop">@dimen/_16dp</item>
        <item name="android:layout_marginBottom">@dimen/_8dp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/label2_size</item>
    </style>

    <style name="input">
        <item name="android:padding">@dimen/_16dp</item>
        <item name="android:drawablePadding">@dimen/input_padding</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/input_text_size</item>
        <item name="android:background">@drawable/input_background</item>
        <item name="android:minHeight">@dimen/input_min_height</item>
    </style>

    <style name="button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="title">
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="normal_text">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>
</resources>